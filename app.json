{
  "name": "FinMind",
  "description": "AI-powered personal finance manager with expense tracking, bill reminders, and smart insights.",
  "repository": "https://github.com/your-org/FinMind",
  "keywords": ["finance", "budgeting", "flask", "react", "ai"],
  "stack": "container",
  "addons": [
    {
      "plan": "heroku-postgresql:essential-0"
    },
    {
      "plan": "heroku-redis:mini"
    }
  ],
  "env": {
    "JWT_SECRET": {
      "description": "Secret key for JWT token signing",
      "generator": "secret"
    },
    "DATABASE_URL": {
      "description": "PostgreSQL connection string (auto-set by addon)"
    },
    "REDIS_URL": {
      "description": "Redis connection string (auto-set by addon)"
    },
    "OPENAI_API_KEY": {
      "description": "OpenAI API key for AI insights (optional)",
      "required": false
    },
    "GEMINI_API_KEY": {
      "description": "Google Gemini API key (optional)",
      "required": false
    },
    "LOG_LEVEL": {
      "description": "Logging level",
      "value": "INFO"
    },
    "VITE_API_URL": {
      "description": "Backend API URL for the frontend",
      "value": "https://${HEROKU_APP_NAME}.herokuapp.com"
    }
  },
  "buildpacks": [],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  }
}
